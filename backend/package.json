{
  "name": "tourquest-backend-bun",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "ws:dev": "bun --hot src/ws.ts",
    "start": "bun run src/index.ts",
    "test": "APP_ENV=test bun test",
    "test:watch": "bun test --watch",
